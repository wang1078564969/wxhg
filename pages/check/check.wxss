page{
      background: rgb(250, 250, 250)
}
.user{
   position:relative;
    height: 200rpx;
    background:#fff;
    border-radius: 20rpx;
    width: 690rpx;
    margin: 40rpx auto;
    display: flex;
    align-items: center;
}
.user-img{
    margin: 0 30rpx;
    width: 135rpx;
    height: 135rpx;
    border-radius: 50%;
    background: #fafafa
}
.user-img image{
    margin: 5rpx; 
    width:120rpx;
    height: 120rpx;
}
 .user-name .name{
    font-size: 32rpx;
    font-weight:bold; 
 }
 .user-name .post{
    font-size:24rpx; 
 }
 .user .button{
    font-size:20rpx;
    line-height: 50rpx;
    color: #fff;
    margin-left:200rpx; 
    border-radius:50rpx;
    width: 160rpx;
    height: 50rpx;
    background: #3fc069;
    text-align: center;
 }
 .button image{
     width:20rpx;
     height: 12rpx;
 }
 .title{
   width: 690rpx;
   padding-left: 30rpx;
   color: #666;
   font-size: 20rpx;
   line-height: 20rpx;
   margin: 40rpx auto 20rpx auto
 }
 .calend{
    border-radius: 20rpx;
    background:#fff;
    width: 690rpx;
    margin: 0rpx auto;
 }
 .calendar{
    padding: 30rpx;
 }
